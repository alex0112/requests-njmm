<%= bootstrap_form_for(@request) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    <div class="letter">
      <!-- Name: -->
      <span class="letter-text">
	To whom it may concern, </br> <span class="indent"> my name is </span>
	<%= f.label :name, hidden: true %>
	<%= f.text_field :name, label: '&nbsp;'.html_safe %>.
      </span>
      
      <!-- Request: -->

      <span class="letter-text">
	I would like to request that you send missionaries to 
	<%= f.label :request, hidden: true %>
	<%= f.select :request, [['deliver a copy of the Book of Mormon.', 'bom'], ['come visit me.', 'visit'], ['deliver a copy of the Bible.', 'bible']], label: '&nbsp;'.html_safe%>
      </span>
      
      <!-- Address: -->
      <span class="letter-text">
	At my home: 
	<%= f.label :address, hidden: true %>
	<%= f.text_field :address, label: '&nbsp;'.html_safe %>
	I'll be expecting them within a day or so!  Thank you!
      </span></br>
      
      <!-- Comments: -->
      <span class="letter-text">
	<%= f.label :comments, hidden: true %>
	PS
	<%= f.text_field :comments, label: '&nbsp;'.html_safe %>
      </span></br>
      
      <%= f.submit "Send", class: "btn btn-submit" %>
    </div>
    <% end %>
    
